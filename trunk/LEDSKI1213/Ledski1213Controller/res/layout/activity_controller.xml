<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewBluetoothStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#666666"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="0,1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >
        <Button
            android:id="@+id/buttonPower"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/label_button_power" />

        <Button
            android:id="@+id/buttonPWM"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/label_button_pwm" />

    </TableRow>
    </TableLayout>

    <!--
    <Button
        android:id="@+id/buttonMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_button_mode" />
         -->

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/textViewRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_red"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <SeekBar
            android:id="@+id/seekBarRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_red"
            android:max="0xFF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonRed"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/label_button_red" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/textViewGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_green"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <SeekBar
            android:id="@+id/seekBarGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_green"
            android:max="0xFF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonGreen"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/label_button_green" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/textViewBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_blue"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <SeekBar
            android:id="@+id/seekBarBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_blue"
            android:max="0xFF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonBlue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/label_button_blue" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/textViewGamma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_gamma"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <SeekBar
            android:id="@+id/seekBarGamma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_white"
            android:max="0xFF"
            android:layout_margin="8dp"/>
    </TableRow>

    </TableLayout>
